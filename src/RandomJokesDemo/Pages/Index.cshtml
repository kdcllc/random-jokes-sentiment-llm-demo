@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div id="getJoke" style="display:none" class="spinner-border text-dark" role="status">
        <span class="sr-only">Loading...</span>
    </div>

    <form method="post">

    <div class="container mt-5">
        <h1 class="text-center">Joke of the Day</h1>
        <div class="text-center mt-3">
            <input class="btn btn-primary" type="submit" value="Get Joke"  onsubmit="spinner()"/>
        </div>
        <div class="mt-4">
            <p class="lead text-center" id="">@Model.Joke.Setup</p>
            <p class="lead text-center" id="">@Model.Joke.Punchline</p>
            <p class="lead text-center" id="">@Model.Sentiment</p>
        </div>
    </div>
    </form>
    <h1 class="mt-5">Stored Jokes</h1>

    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Type</th>
                <th>Joke Punchline</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var joke in Model.Jokes)
        {
            <tr>
                    <td>@joke.Type</td>
                    <td>@joke.Punchline</td>
                </tr>
        }
        </tbody>
    </table>
</div>

<script>
    function spinner() {

        console.log("trigger");

        var x = document.getElementById("getJoke");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>